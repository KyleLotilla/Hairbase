<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
<children>
    <Label text="Inventory Name: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="inventoryNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Cost per Single Quantity: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="baseCostOfInventoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Quantity: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="quantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#addInventoryExpense" text="Submit" GridPane.rowIndex="3" />
</children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
